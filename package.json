{
  "name": "nouvelle",
  "version": "0.0.0",
  "private": true,
  "description": "Nouvelle - A modern monorepo application",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@nouvelle/web",
    "dev:web:all": "turbo run dev --filter=@nouvelle/convex --filter=@nouvelle/api --filter=@nouvelle/web",
    "dev:desktop": "turbo run dev --filter=@nouvelle/desktop",
    "dev:api": "turbo run dev --filter=@nouvelle/api",
    "dev:convex": "turbo run dev --filter=@nouvelle/convex",
    "dev:all": "turbo run dev --filter=@nouvelle/convex --filter=@nouvelle/api --filter=@nouvelle/web --filter=@nouvelle/desktop",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@nouvelle/web",
    "build:desktop": "turbo run build --filter=@nouvelle/desktop",
    "build:api": "turbo run build --filter=@nouvelle/api",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "pnpm format:prettier && pnpm format:mdx",
    "format:prettier": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:mdx": "mdxlint . --ext mdx --output",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "turbo run storybook --filter=@nouvelle/ui",
    "docker:up": "docker compose up -d",
    "docker:up:dashboard": "docker compose --profile dashboard up -d",
    "docker:down": "docker compose down",
    "docker:down:clean": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:5173",
    "test:e2e:with-server": "TEST_MODE=true turbo run dev --filter=@nouvelle/api --filter=@nouvelle/convex --filter=@nouvelle/web & sleep 10 && TEST_MODE=true playwright test && pkill -f 'turbo run dev'",
    "test:e2e:debug:with-server": "TEST_MODE=true turbo run dev --filter=@nouvelle/api --filter=@nouvelle/convex --filter=@nouvelle/web & sleep 10 && TEST_MODE=true playwright test --debug && pkill -f 'turbo run dev'",
    "server:test": "NODE_ENV=test TEST_MODE=true turbo run dev --filter=@nouvelle/api --filter=@nouvelle/convex --filter=@nouvelle/web"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.10.5",
    "mdxlint": "^1.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.4.2",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}

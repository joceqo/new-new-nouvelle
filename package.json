{
  "name": "nouvelle",
  "version": "0.0.0",
  "private": true,
  "description": "Nouvelle - A modern monorepo application",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@nouvelle/web",
    "dev:desktop": "turbo run dev --filter=@nouvelle/desktop",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@nouvelle/web",
    "build:desktop": "turbo run build --filter=@nouvelle/desktop",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "turbo run storybook --filter=@nouvelle/ui"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
